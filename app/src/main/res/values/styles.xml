<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:divider">@color/colorDivider</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>

    <style name="LinearLayout">
        <item name="android:onClick">onClick</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BasicTextView">
        <item name="android:onClick">onClick</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="BasicTextView.Branch">
        <item name="android:textSize">@dimen/branch_text_size</item>
    </style>

    <style name="BasicTextView.LeftTextView">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="BasicTextView.Status">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/status_background</item>
        <item name="android:layout_weight">0</item>
    </style>

</resources>
